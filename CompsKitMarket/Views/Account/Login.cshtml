 @model LoginModel
@{
    ViewData["Title"] = "Авторизация";
}

<form 
    asp-controller="Account" 
    asp-action="Login" 
    data-ajax="true"
    data-ajax-method="POST",
    data-ajax-success="sendCartSuccess"
    data-ajax-failure="sendCartFailure">

    @Html.AntiForgeryToken()
    
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="widget widget-blue">
                <div class="widget-title">
                    <h3 class="text-center">Добро пожаловать</h3>
                </div>
                <div class="widget-content">


                    <div class="form-group relative-w">
                        @Html.TextBoxFor(m => m.Login, new { @class = "form-control", placeholder = "Логин", autofocus = "autofocus" })
                        <i class="fa fa-user input-abs-icon"></i>
                    </div>

                    <div class="form-group relative-w">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Пароль" })
                        <i class="fa fa-lock input-abs-icon"></i>
                    </div>

                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                @Html.LabelFor(m => m.RememberMe, "Запомнить меня")
                                @Html.CheckBoxFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-rounded btn-iconed">
                        <span>Войти</span>
                        <i class="fa fa-arrow-right"></i>
                    </button>


                </div>
            </div>
        </div>
    </div>
</form>
