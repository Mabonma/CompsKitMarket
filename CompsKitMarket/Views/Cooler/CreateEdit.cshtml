@model CompsKitMarket.Models.Cooler.CoolerModel
@{
    string text = Model.IsNew ? "Добавление" : "Редактирование";
    ViewData["Title"] = text;
}

<div class="pb-3 bg-light p-5 rounded border">
    <h4>
        @text
    </h4>
    <hr />
    <form asp-action="Save" method="post" enctype="multipart/form-data">
        <div class="row">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Производитель</label>
                    <div class="form-line">
                        @Html.DropDownListFor(m => m.ManufacturerId, ViewData["Manufacturers"] as List<SelectListItem>, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="w-100"><hr></div>
            <div class="col-md-6 mb-3">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" accept=".jpg,.png,.gif,.jpeg" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="w-100"><hr></div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label" asp-for="CoolerTyperId"></label>
                    <div class="form-line">
                        @Html.DropDownListFor(m => m.ProcSocketId, ViewData["CoolerTypes"] as List<SelectListItem>, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Размер материнской платы</label>
                    <div class="form-line">
                        @Html.DropDownListFor(m => m.ProcSocketId, ViewData["ProcSockets"] as List<SelectListItem>, "-Выберите тип-", new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <select class="form-select form-select-sm" asp-for="TypeCooling" asp-items="Html.GetEnumSelectList<TypeCooling>()">
                <option selected="selected" value="">Выберите охлаждение</option>
            </select>

            <div class="w-100"><hr></div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Diam" class="control-label"></label>
                    <input asp-for="Diam" class="form-control" />
                    <span asp-validation-for="Diam" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Tdp" class="control-label"></label>
                    <input asp-for="Tdp" class="form-control" />
                    <span asp-validation-for="Tdp" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="CountFan" class="control-label"></label>
                    <input asp-for="CountFan" class="form-control" />
                    <span asp-validation-for="CountFan" class="text-danger"></span>
                </div>
            </div>

            <div class="w-100"><hr></div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Height" class="control-label"></label>
                    <input asp-for="Height" class="form-control" />
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Width" class="control-label"></label>
                    <input asp-for="Width" class="form-control" />
                    <span asp-validation-for="Width" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Rpm" class="control-label"></label>
                    <input asp-for="Rpm" class="form-control" />
                    <span asp-validation-for="Rpm" class="text-danger"></span>
                </div>
            </div>

            <div class="w-100"><hr></div>
            <div class="col-md-4">
                <div class="mb-3">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>