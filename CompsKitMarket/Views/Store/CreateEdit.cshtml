@model CompsKitMarket.Models.Store.StoreModel
@{
    string text = Model.IsNew ? "Добавление" : "Редактирование";
    ViewData["Title"] = text;
}

<div class="pb-3 bg-light p-5 rounded border">
    <h4>
        @text
    </h4>
    <hr />
    <form asp-action="Save" method="post">
        <div class="row">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="WorkMode" class="control-label"></label>
                    <input asp-for="WorkMode" class="form-control" />
                    <span asp-validation-for="WorkMode" class="text-danger"></span>
                </div>
            </div>

            <div class="w-100"><hr></div>

            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Mail" class="control-label"></label>
                    <input asp-for="Mail" class="form-control" />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>
            </div>

            <div class="w-100"><hr></div>

            @if (!Model.IsNew)
            {
                <div class="widget-title d-flex">
                    <a class="btn btn-primary ml-auto" onclick="editModal('@Url.Action("AddPartCost")')">Добавить</a>
                </div>

                <div class="w-100"></div>

                <div class="widget-content w-100">
                    @Html.AjaxGrid(Url.Action("PartsGridPartial", new { id = Model.Id}), new { id = "ajax-grid"})
                </div>
            }
            
            <div class="w-100"><hr></div>

            <div class="col-md-4">
                <div class="mb-3">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>