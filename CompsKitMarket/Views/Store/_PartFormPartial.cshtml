@model PartStoreModel

<div class="modal fade" id="directoryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Цена</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="SavePartCost"
                      data-ajax="true"
                      data-ajax-method="POST"
                      data-ajax-success="directoryModalCheck">

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Id)

                    <div class="row">
                        <div class="col-12">
                            @if (Model.IsNew)
                            {
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label">Товар</label>
                                        <div class="form-line">
                                            @Html.DropDownListFor(m => m.Id, ViewData["Parts"] as List<SelectListItem>, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            }
                            <div class="mb-3 form-group relative-w">
                                <label asp-for="Cost" class="control-label"></label>
                                <div class="input-group mb-3">
                                    <input asp-for="Cost" class="form-control" />
                                    <span class="input-group-text">BYN</span>
                                </div>
                                <span asp-validation-for="Cost" class="text-danger"></span>
                            </div>

                            <div asp-validation-summary="ModelOnly"></div>

                            <button type="submit" class="btn btn-primary btn-rounded btn-iconed">
                                <span>Сохранить</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>