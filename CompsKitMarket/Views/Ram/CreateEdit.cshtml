@model CompsKitMarket.Models.Ram.RamModel
@{
    string text = Model.IsNew ? "Добавление" : "Редактирование";
    ViewData["Title"] = text;
}

<div class="pb-3 bg-light p-5 rounded border">
    <h4>
        @text
    </h4>
    <hr />
    <form asp-action="Save" method="post" enctype="multipart/form-data">
        <div class="row">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="w-100"><hr></div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Производитель</label>
                    <div class="form-line">
                        @Html.DropDownListFor(m => m.ManufacturerId, ViewData["Manufacturers"] as List<SelectListItem>, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="w-100"><hr></div>
            <div class="col-md-6 mb-3">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" accept=".jpg,.png,.gif,.jpeg" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="w-100"><hr></div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Размер материнской платы</label>
                    <div class="form-line">
                        @Html.DropDownListFor(m => m.TypeId, ViewData["TypeRams"] as List<SelectListItem>, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Vol" class="control-label"></label>
                    <input asp-for="Vol" class="form-control" />
                    <span asp-validation-for="Vol" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Count" class="control-label"></label>
                    <input asp-for="Count" class="form-control" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
            </div>

            <div class="w-100"><hr></div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Freq" class="control-label"></label>
                    <input asp-for="Freq" class="form-control" />
                    <span asp-validation-for="Freq" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Timings" class="control-label"></label>
                    <input asp-for="Timings" class="form-control" />
                    <span asp-validation-for="Timings" class="text-danger"></span>
                </div>
            </div>

            <div class="w-100"><hr></div>
            <div class="col-md-4">
                <div class="mb-3">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>